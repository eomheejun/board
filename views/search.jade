doctype html
html
    head
        meta(charset='UTF-8')
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        script(src="http://code.jquery.com/jquery-latest.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous")

    
    body
        table(class="table table-striped")
            thead
                tr
                    th 번호
                    th 제목
                    th 작성자
                    th 날짜
            tbody
                -for(var i=0;i<board.length;i++)
                    -if(board[i].id=='D')
                        tr(style="background-color:pink" onclick=`location.href='/main/${board[i].id}'`)
                            td= board[i].id
                            td= board[i].title
                            th= board[i].name
                            th= board[i].deleteTime
                    -else
                        tr(onclick=`location.href='/main/${board[i].id}'`)
                            td= board[i].id
                            td= board[i].title
                            th= board[i].name
                            -if(board[i].updateTime)
                                th= board[i].updateTime
                            -else
                                th= board[i].createTime
        hr
        div(align="right")
            form(action="/search" method="post")
                select(id="box" name="search")
                    option --선택--
                    option(label="제목" value="title")   
                    option(label="작성자" value="name") 
                    input(type="text" name="text")
                    button#btnSave.btn.btn-sm.btn-primary(type="submit")  검색
    
                a(class="btn btn-outline-dark" href="/create") 글쓰기
